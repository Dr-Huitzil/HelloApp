<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Parent1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textColor="@color/black"
        android:text="Hello from Ivan!"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="#4e3f7d"
        android:text="Click to change text color"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/ChangeBackgroundButton"
        android:layout_above="@id/button"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:background="#4e3f7d"
        android:text="Click to change background color"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:textSize="25sp" />
    <TextView
        android:id="@+id/ChangeTextButton"
        android:layout_above="@id/ChangeBackgroundButton"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="170dp"
        android:background="#4e3f7d"
        android:text="Click to change text"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/editText"
        android:layout_above="@id/ChangeCustomTextButton"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Type your own text" />
    <TextView
        android:id="@+id/ChangeCustomTextButton"
        android:layout_above="@id/ChangeTextButton"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="240dp"
        android:background="#4e3f7d"
        android:text="Click to change YOUR text"
        android:textColor="@color/white"
        android:padding="12dp"
        android:layout_alignParentBottom="true"
        android:textSize="25sp" />


</RelativeLayout>